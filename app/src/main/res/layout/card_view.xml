<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cliente_id"
                android:textSize="30sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cliente_nombre"
                android:layout_toEndOf="@+id/cliente_id"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cliente_sexo"
                android:layout_toEndOf="@+id/cliente_id"
                android:layout_below="@+id/cliente_nombre"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cliente_correo"
                android:layout_toEndOf="@+id/cliente_id"
                android:layout_below="@+id/cliente_sexo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cliente_cel"
                android:layout_toEndOf="@+id/cliente_id"
                android:layout_below="@+id/cliente_correo"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>